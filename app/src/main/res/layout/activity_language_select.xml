<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ui.activity.LanguageSelectActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@drawable/ic_group_271"
                android:id="@+id/imageView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_select_language"
                android:layout_marginBottom="8dp" />

        <TextView
                android:id="@+id/tv_select_language"
                android:layout_width="0dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textSize="24sp"
                android:textColor="@color/blue_grey_900"
                android:text="@string/select_language"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintBottom_toTopOf="@+id/btn_english"
                android:layout_marginBottom="24dp" />

        <com.google.android.material.button.MaterialButton
                android:text="@string/continue_with_english"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_english"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/blue_grey_900"
                app:strokeWidth="1dp"
                android:padding="16dp"
                app:elevation="8dp"
                android:textColor="@color/blue_grey_900"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/btn_sanskrit"
                android:layout_marginBottom="16dp" />

        <Button
                android:text="@string/continue_with_sanskrit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_sanskrit"
                app:strokeColor="@color/blue_grey_900"
                app:strokeWidth="1dp"
                android:padding="16dp"
                android:elevation="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quizzon" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_a700</item>
        <item name="colorPrimaryVariant">@color/teal_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/pink_50</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSurface">#1D1D35</item>
        <item name="colorSecondary">@color/teal_600</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/martel_sans</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">58dp</item>
        <item name="android:minHeight">58dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="CustomInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="strokeColor">@color/green_a700</item>
        <item name="android:strokeColor">@color/green_a700</item>
    </style>

    <style name="LoadingButtonStyle">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="corner_radius">@dimen/button_corner_radius</item>
        <item name="android:backgroundTint">@color/green_a700</item>
        <item name="btn_text_color">@color/white</item>
        <item name="pressed_color">@color/blue_700</item>
        <item name="finished_color">@color/green_500</item>
        <item name="disabled_color">@color/blue_200</item>
    </style>

    <style name="CustomCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@drawable/category_background_1</item>
    </style>

    <style name="CustomRadio" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/background_radio</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@drawable/radio_text_color</item>
    </style>
</resources>